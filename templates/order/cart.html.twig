{% extends 'base.html.twig' %}
{% block body %}
<h1>Rорзина</h1>
<table class="table">
    <tr>
        <th>Товар</th>
        <th>Цена</th>
        <th>Кол-во</th>
        <th>Стоимость</th>

    </tr>
    {% for item in order %}
    <tr>
        <th>{{ item.name }}</th>
        <th>{{ item.price }}</th>
        <th>{{ item.count }}</th>
        <th>{{ item.amount }}</th>

    </tr>
    {% endfor %}
    <tr>
        <th colspan="3">Total</th>
        <th>{{ order.amount/100 }}</th>

    </tr>
</table>
{% endblock %}